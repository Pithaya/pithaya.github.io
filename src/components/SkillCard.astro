---
import type { Skill } from "src/types/skill";
import SkillTag from "./SkillTag.astro";

interface Props {
  title: string;
  skills: Skill[];
}

const { skills, title } = Astro.props;
---

<div
  class="backdrop-blur-xs shadow-md rounded-lg p-4 bg-white/30 dark:bg-slate-700/30"
>
  <div class="flex items-center mb-4 gap-2">
    <slot name="icon" />
    <h2 class="text-lg font-bold">{title}</h2>
  </div>
  <ul class="list-none flex flex-wrap gap-2">
    {
      skills.map((skill) => (
        <li>
          <SkillTag skill={skill} />
        </li>
      ))
    }
  </ul>
</div>
